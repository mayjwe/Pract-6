<Page x:Class="Pract_3.Pages.EditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Редактирование">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Name="TitleTextBlock" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Имя" FontSize="16" />
            <TextBox Name="tbName" Width="200" Margin="0,5" />

            <TextBlock Text="Фамилия" FontSize="16" Margin="10,0,0,0" />
            <TextBox Name="tbSurname" Width="200" Margin="0,5" />

            <TextBlock Text="Отчество" FontSize="16" Margin="10,0,0,0" />
            <TextBox Name="tbPatronymic" Width="200" Margin="0,5" />

            <TextBlock Text="Номер телефона" FontSize="16" Margin="10,0,0,0" />
            <TextBox Name="tbPhoneNumber" Width="200" Margin="0,5" />


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20,30,0,0">
                <Button Name="SaveButton" Content="Сохранить" Width="100" Margin="5" Click="SaveButton_Click"/>
                
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
